{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types","@types"],
        "baseUrl": "./",
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES5",
    },
    "exclude": ["node_modules", "../main.ts"],
    "include": ["**/*.ts", "**/*.tsx"]
}